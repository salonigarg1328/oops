#include<iostream>
#include<string.h>
using namespace std;
int main(){
    char str1[40];
    char str2[40];
    int k=0;
    cout<<"enter str";
    cin.getline(str1,40);
    char character;
    cout<<"enter ch you want to remove:";
    cin>>character;
    int len=strlen(str1);
    for(int i=0; i<len;i++){
        if(str1[i]!=character){
            str2[k++]=str1[i];
        }
    }
    cout<<str2;
    return 0
}
