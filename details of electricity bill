#include<iostream>
using namespace std;
class bill{
    private:
    string name;
    float units;
    float charge;
   public:
   
   void setName(string name){
   this->name=name;   }
    string getName(){
        return name;
    }
   void setUnits(int units){
       this->units=units;
   }
   float getUnits(){
    return units;
   }
   

   int billcalculate(){
    charge=0;
    if(units<=100){
     charge=(0.60*units)+50;
    }
    else if (units>100 && units<=300){
       units=units-100;
        charge=(60)+(0.80*units)+50;
    }
    else{
        units=units-300;
        charge=220+(0.90*units)+50;
    
    charge= charge + (charge*15)/100;
     }
          return charge;
   }
   
void detailsofbill(){
     cout<<name<<endl;
     cout<<units<<endl;
     cout<<charge;
   }
   
};
int main(){
    int size;
    cout<<"enter number of customer ";
    cin>>size;  
     string name;
     int units;
    for(int i=0;i<size;i++){
    cout<<"enter name"<<i+1;
    cin>>name;
    cout<<"enter units are used"<<endl;
    cin>>units; }
     bill d1[size];
     for(int i=0;i<size;i++){
     d1[i].setName(name);
      }

 for(int i=0;i<size;i++){
    d1[i].setUnits(units);
     }
 
    
   for(int i=0;i<size;i++){
        d1[i].billcalculate();
     }
     for(int i=0;i<size;i++){
        d1[i].detailsofbill();
     } 
return 0;
}   

