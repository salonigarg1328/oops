#include<iostream>
using namespace std;
class employee{
    private:
    int id;
    string name;
    float salary;
    string companyName;

    public:
     
    void setID(int id){
      this->id=id;
    }
    int getid(){
return id;
    }
    
    void setName(string name){
        this->name=name;
    }
    string getname(){
        return name;
    }
    
    void setSalary(float salary){
       this->salary=salary;
    }
    float getsalary(){
        return salary;
     }
    
    void setSalary(float salary){
       this->salary=salary;
    }
    float getsalary(){
        return salary;
    }
     
    void setCompanyName( string companyname){
        this->companyName=companyname;
    }  
    string CompanyName(){
        return companyName;
}

    
};
int main(){
    employee d1;
        d1.setID(10);
        cout<<"ID of employee "<<d1.getid()<<endl;;
        d1.setName("saloni");
        cout<<"name of employee "<<d1.getname()<<endl;
        d1.setSalary(50000.00);
        cout<<"salary of employee "<<d1.getsalary()<<endl;
        d1.setCompanyName("xyz");
        cout<<"company name of employee "<<d1.CompanyName()<<endl;

    return 0;
    }
