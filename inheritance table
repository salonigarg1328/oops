#include<iostream>
using namespace std;
class base{
  private:
  int x=1;
  protected:
  int y=2;
  public:
  int z=3;
  base(){
    
  }
  void show(){
    cout<<"all base class members:"<<endl;
    cout<<"private x="<<x<<"\t";
    cout<<"protected y="<<y<<"\t";
    cout<<"private z="<<z<<endl;
  }
};
class dpublic:public base{
   public:
   void show(){
    cout<<"public derived class members:\t";
    //cout<<x;
    cout<<y<<"\t";
    cout<<z<<endl;
   }
};
class dprotected:protected base{
 public:
 void show(){
  cout<<"protected derived class members:\t";
  //cout<<x;
  cout<<y<<"\t";
  cout<<z<<endl;
 }
};
class dprivate:private base{
  public:
  void show(){
    cout<<"private class members:\t";
   // cout<<x;
  cout<<y<<"\t";
  cout<<z<<endl;
  }
};
int main(){
    base b;
    b.show();
    dpublic pub;
    dprotected pro;
    dprivate pri;
    
    pub.show();
    
    pro.show();
    
    pri.show();


    return 0;
}
